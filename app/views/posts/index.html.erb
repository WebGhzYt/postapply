<h1>All List Of Jobs</h1>


<table bgcolor="yellow" align="center" width="100%">
<ul class="users">
<% if (@posts.any?) %>
<tr>
	<td>Post Id</td>
	<td>Post Title</td>
	<td>Posted By</td>
	<td>Status</td>
	</tr>
	
  <% @posts.each do |post| %>
  <% temp = 1%>
<tr>
     
      <td><%= link_to post.id, '#' %></td>
     <td><%= link_to post.title, show_for_user_path(post.title) %></td>
     
    <td> <%= link_to post.user_id, profile_path(post.user_id) %></td>

 <td>
 <div>
 	
    <%= link_to "Apply", apply_index_path(:post_id => post.id), :method => :post  %>
   
 </div>
  
  </td> 

  <% end %>
  
</tr>

<% else %>
	No any Jobs
<% end %>

</ul>
</table>

